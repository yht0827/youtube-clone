extends layouts/main
include mixins/searchVideoBlock

block content  
    .search_header 
    if videos.length === 0
      div.novideo
        img(src="http://fmda.in/images/found.gif")
    else
     .search__videos
       each item in videos
            +videoBlock({
                id:item.id,
                title:item.title,
                views:item.views,
                creator:item.creator,
                videoFile:item.fileUrl,
                createdAt:item.createdAt,
                description:item.description
            })